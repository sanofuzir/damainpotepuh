{% extends 'damainpotepuhStaticBundle::layout.html.twig' %}

{% block title %}{{ products.0.category }}{% endblock %}

{% block content %}
<div class="header-img">
    
    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img.jpg') }}" alt="">
          <div class="container">
            <div style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Ptice so svobodna bitja ki letajo iz veje na vejo"</h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img2.jpg') }}" alt="">
          <div class="container">
            <div  style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Hrčki so mala in nagajiva bitja, ki se vedno zabavajo"</h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img3.jpg') }}" alt="">
          <div class="container">
            <div  style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Glodalci... vedno lačni"</h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img4.jpg') }}" alt="">
          <div class="container">
            <div  style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Ribe so mirna bitja, ki vedno presenečajo"</h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img5.jpg') }}" alt="">
          <div class="container">
            <div  style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Psi je človekov najboljši prijatelj"</h2>
            </div>
          </div>
        </div>
        <div class="item">
          <img src="{{ asset('bundles/damainpotepuhstatic/images/products-img6.jpg') }}" alt="">
          <div class="container">
            <div  style="background: none;" class="damainpotepuh-carousel-caption carousel-caption">
              <h2 style="color: #fff; margin-left: 200px; margin-top: -250px;">"Mačke so čudovita in intelegentna bitja"</h2>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->
 
</div>

<div class="menu">
    <h2>{{ products.0.category }}</h2>
    {{ render(controller('damainpotepuhStaticBundle:Product:Menu', { 'id': products.0.category })) }}
</div>

<div class="products">
{% for product in products %}
    <div class="product">
        <h2 style="line-height: 18px; font-size: 1em;" >{{ product.name|length > 120 ? 
               product.name|slice(0, 120) ~ '...' : 
               product.name }}</h2>
        <p class="product_link">
            <a href="{{ path('_single_product', ({'id': product.id}) ) }}" >Več...&raquo;</a>
        </p>
        <p class="price-info" style="margin-left: 0px;"><span style="padding-right: 20px;">{{ product.price }} €</span></p>
        <img src="{{ asset('products/')}}{{product.path }}" alt="slika"/>
        
    </div>
    {% endfor %}
</div>

{% endblock %}

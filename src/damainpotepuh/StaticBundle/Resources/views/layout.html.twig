<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %}Dama in potepuh</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    {% stylesheets output='css/style.css' filter=''
           '@damainpotepuhStaticBundle/Resources/assets/css/bootstrap.css'
           '@damainpotepuhStaticBundle/Resources/assets/css/bootstrap-responsive.css'
           '@damainpotepuhStaticBundle/Resources/assets/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container" style="background-color: #473629;">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('_home') }}">
                <img src="{{ asset('bundles/damainpotepuhstatic/images/logo.png') }}" alt="Logo" id="logo"/>
          </a>          
          <div class="nav-collapse collapse">
              <ul class="nav">
                <li><a href="{{ path('_home') }}">Domov</a></li>
                <li><a href="{{ path('_o_nas') }}">O nas</a></li>
                 <li class="dropdown">
                  <a href="{{ path('_artikli') }}" class="dropdown-toggle" data-toggle="dropdown">Artikli <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="{{ path('_dogs') }}">Psi</a></li>
                    <li><a href="{{ path('_cats') }}">Mačke</a></li>
                    <li><a href="{{ path('_birds') }}">Ptice</a></li>
                    <li><a href="{{ path('_rodents') }}">Glodalci</a></li>
                    <li><a href="{{ path('_fishes') }}">Ribe</a></li>
                    <li><a href="{{ path('_hamsters') }}">Hrčki</a></li>
                    <li class="divider"></li>
                    <li class="nav-header">Novosti</li>
                    <li><a href="{{ path('_action_products') }}">Akcijski izdelki</a></li>
                    <li><a href="{{ path('_new_products') }}">Novi izdelki</a></li>
                    <li><a href="{{ path('_fancy') }}">Šmensi-fensi</a></li>
                  </ul>
                </li>
                <li><a href="{{ path('_galerija') }}">Galerija</a></li>
                <li><a href="{{ path('_kontakt') }}">Kontakt</a></li>
                <li><a href="{{ path('_zmenkarije') }}">Zmenkarije</a></li>
              </ul>
            </div><!--/.nav-collapse -->
          
        </div>
      </div>
    </div>

    <div class="container">
      {% for type, messages in app.session.flashbag.all() %}
          {% for message in messages %}
              <div class="alert alert-{{type}} fade in" data-alert="alert"><a class="close" data-dismiss="alert" href="#">&times;</a><div class="alert-heading">{{ message }}</div></div>
          {% endfor %}
      {% endfor %}    
                  
    <div class="symfony-content">
        {% block content %}
        {% endblock %}
    </div>
    </div>
      
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% javascripts  output='js/scripts.js'
        '@damainpotepuhStaticBundle/Resources/assets/js/vendor/jquery-1.9.1.js'
        '@damainpotepuhStaticBundle/Resources/assets/js/vendor/bootstrap.js'
        '@damainpotepuhStaticBundle/Resources/assets/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

  </body>
</html>

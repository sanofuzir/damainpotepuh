{% extends 'damainpotepuhStaticBundle::layout.html.twig' %}

{% block title %}Zmenkarije{% endblock %}

{% block content %}

<h2>Zmenkarije</h2>
<table class="ads">
    <a class="btn btn-small pull-right" href="{{ path('_add_ad') }}"><i class="icon-plus"></i> Dodaj oglas</a>
    {% for ad in ads %}
    <tr>
        <th><h3>Oglas</h3></th>
        <th><h3>Ime</h3></th>
        <th><h3>Opis</h3></th>
    </tr>
    <tr>
      <td><img src="{{ asset('ads/')}}{{ad.path }}" alt="slika" /></td>
      <td>{{ad.name}}</td>
      <td><span class="description">
          {{ ad.text|length > 50 ? ad.text|slice(0, 50) ~ '...' : ad.text }}
          </span>
      </td>
    </tr>
    {% endfor %}
</table>

{% endblock %}

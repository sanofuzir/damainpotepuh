{% extends 'damainpotepuhStaticBundle::layout.html.twig' %}

{% block title %}Podkategorije{% endblock %}

{% block content %}
<h2>Podkategorije</h2>
<a class="btn btn-small pull-right" href="{{ path('_admin_add_subcategory') }}"><i class="icon-plus"></i> Dodaj podkategorijo</a>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Ime</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {% for subcategory in subcategorys %}
    <tr>
      <td>{{ subcategory.id }}</td>
      <td>{{ subcategory.name }}</td>
      <td><a href="{{ path('_admin_edit_subcategory', {'id': subcategory.id}) }}" title="Uredi Podkategorijo">
              <i class="icon-edit"></i>Uredi</a>&nbsp;
              <a href="{{ path('_admin_delete_subcategory', {'id': subcategory.id } ) }}" class="confirmation" title="Odstrani podkategorijo" data-confirmation="Ali si prepričan?">
                  <i class="icon-trash">Izbriši</i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}

{% extends 'damainpotepuhStaticBundle::layout.html.twig' %}

{% block title %}Oglasi{% endblock %}

{% block content %}
<h2>Oglasi</h2>
<a class="btn btn-small pull-right" href="{{ path('_admin_add_ad') }}"><i class="icon-plus"></i> Dodaj Oglas</a>
<table style="background-color: #F9D49E;" class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>ime</th>
      <th>Text</th>
      <th>Datum / ura vnosa</th>
      <th>Slika</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    {% for ad in ads %}
    <tr>
      <td>{{ ad.id }}</td>
      <td>{{ ad.name}}</td>
      <td>{{ ad.text|length > 50 ? ad.text|slice(0, 50) ~ '...' : ad.text }}</td>
      <td>{{ ad.created|date('d.m.Y H:i:s')}}</td>
      <td>
          <a href="{{ asset('ads/')}}{{ad.path }}" rel="lightbox">
            <img src="{{ asset('ads/')}}{{ad.path }}" alt="slika" width="50"/>
          </a>
      </td>
      <td><a href="{{ path('_admin_edit_ad', {'id': ad.id}) }}" title="Uredi Oglas">
              <i class="icon-edit"></i>Uredi</a>&nbsp;
              <a href="{{ path('_admin_delete_ad', {'id': ad.id } ) }}" class="confirmation" title="Odstrani oglas" data-confirmation="Ali si prepričan?">
                  <i class="icon-trash">Izbriši</i></a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
